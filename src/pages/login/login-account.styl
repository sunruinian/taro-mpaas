.newLogin-account
  padding 64px 0 0 0
  .newLogin-account_name
    display flex
    justify-content space-between
    .newLogin-account_inName
      height 42px
    .newLogin-account_clearBtn
      width 32px
      height 42px
      .icon-close
        width 32px
        height 32px
      .hide
        display none!important
  .newLogin-account_password
    display flex
    justify-content space-between
    margin-top 48px
    .newLogin-account_inpassword
      height 42px
    .showPassword
      width 40px
      height 30px
      position relative
      .icon-pwd
        width 35px
        height 25px
        position absolute
        top 10px
        right 5px
      .hide
         display none!important
  .newLogin-account_underLine
    margin-top 16px
    height 2px
    width 100%
    background #E0E0E0
  .newLogin-account_error
    height 42px
    line-height 42px
    margin-top 8px
    color #CA0C16
    font-size 24px
  .newLogin-sendMessage
    height 88px
    background #E0E0E0
    border-radius 8px
    color #FFFFFF
    font-size 32px
    line-height 88px
    text-align center
    margin-top 26px
  button::after
    border none
    outline none
